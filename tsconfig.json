{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "paths": {
      "@vedha/shared": ["./shared/index.ts"],
      "@vedha/shared/*": ["./shared/*"],
      "@vedha/db": ["./db/index.ts"],
      "@vedha/db/*": ["./db/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*", "shared/**/*", "db/**/*"],
  "exclude": ["node_modules", "dist"]
}
